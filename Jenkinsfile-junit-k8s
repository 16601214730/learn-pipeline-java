pipeline {
  agent {
    label 'maven'
  } 
  
  options {
    disableConcurrentBuilds()
  }

  
  stages{
    stage('Build & Test'){
      steps{
        script{
          container('java'){
            sh 'mvn test -DSERVER_PORT=1234'
            //sh 'mvn test -DSERVER_PORT=2345'
          }
        }
      }
    }
    
    stage('Only for demo'){
      when {
        allOf {
          branch 'master'
        }
      }
      steps{
        echo 'only for demo'
      }
    }
  }
  
  post{
    always{
      junit 'target/surefire-reports/**/*.xml'
    }
  }
}
